def cost(B):
    # Write your code here
    m1 = 0
    mi = 0
    
    for b in range(1, len(B)):
        prev, cur = B[b-1], B[b]
        
        new_mi = max(mi + abs(cur-prev), m1 + (cur-1))
        new_m1 = max(mi + (prev-1), m1)
        
        mi, m1 = new_mi, new_m1
        
    return max(mi, m1)
